<% comments.each do |comment| %>
    <ul>
    <% if @post.user == current_user || comment.user == current_user %>
       <li><%= comment.content %> <%= link_to 'Edit', edit_post_comment_path(@post, comment) %>
       <%= link_to 'Destroy', post_comment_path(@post.id, comment.id), method: :delete, data: { confirm: 'Are you sure?'}  %></li>
    <% else %>
       <li> <%= comment.content %></li>
    <% end %>
    </ul>
<% end %>

